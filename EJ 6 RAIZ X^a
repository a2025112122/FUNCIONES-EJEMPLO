/* 7.9.2a_Crear un programa que halle cualquier raíz de un número. El usuario deberá indicar el número
   (por ejemplo, 2) y el índice de la raiz (por ejemplo, 3 para la raíz cúbica). Pista: hallar la raíz
   cúbica de 2 es lo mismo que elevar 2 a 1/3. */
#include <iostream>
#include <cmath> 

using namespace std;

float raizUniversal (int numero, float indice);

int main() {
    int radicando;
    float indice; 
    
    cout << "Escriba el numero (radicando) al cual le quiere extraer raiz: ";
    
    if (!(cin >> radicando)) {
        cerr << "Error: Radicando no válido." << endl;
        return 1;
    }

    cout << "Escriba el indice de la raiz que quiere extraer (ej: 2 para cuadrada, 3 para cúbica): ";
    
    if (!(cin >> indice)) {
        cerr << "Error: Indice no válido." << endl;
        return 1;
    }
    
    cout << "La raiz es: " << raizUniversal(radicando, indice) << endl;
    
    return 0;
}

                              /**
                               * @brief Calcula la raíz de índice 'ind' del número 'numero'.
                               *
                               * Utiliza la propiedad: Raíz(n)(x) = x^(1/n).
                               *
                               * @param numero El radicando (base).
                               * @param indice El índice de la raíz (exponente fraccionario 1/indice).
                               * @return float El resultado de la operación de la raíz.
                               */

float raizUniversal(int numero, float indice) {
    float resultado;
    
    resultado = pow(numero, 1.0f / indice); 
    
    return resultado;
}
