/* 7.4d_Crear una función llamada “signo”, que reciba un número real, y devuelva un número entero con el
     valor: -1 si el número es negativo, 1 si es positivo o 0 si es cero. */

#include <iostream>

using namespace std;

int signo(float num) {
    int sig;
    
    if (num > 0) {
        sig = 1;
    } else if (num == 0) {
        sig = 0;
    } else {                 // Si no es positivo ni cero, debe ser negativo
        sig = -1;
    }
      
    return sig;
}

int main() {
    float numero = 0; 
    do {
        cout << "\nEscriba un numero real (o un valor menor a -1000000 para salir): ";
        
        if (!(cin >> numero)) {
            cerr << "\nError de entrada. Saliendo..." << endl;
            break;                           // Sale del bucle en caso de entrada inválida (ej. texto)
        }
        
        cout << "El signo es: " << signo(numero) << endl;
        
    } while (numero >= -1000000); // El bucle continúa si el número es mayor o igual al límite

    cout << "\nPrograma finalizado." << endl;
    
    return 0;
}
